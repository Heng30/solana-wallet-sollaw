        }

        SettingEntry {
            text: Logic.tr(Store.is-cn, "ÊòæÁ§∫ÁªÑËÆ∞ËØç");
            icon: Icons.mnemonic;
            clicked => {
                PasswordSetting.set(true, "show-mnemonic", "");
